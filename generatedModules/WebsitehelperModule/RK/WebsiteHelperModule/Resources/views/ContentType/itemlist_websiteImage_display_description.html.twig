{# Purpose of this template: Display website images within an external context #}
<dl>
    {% for websiteImage in items %}
        <dt>{{ websiteImage.getTitleFromDisplayPattern() }}</dt>
        {% if websiteImage.myDescription %}
            <dd>{{ websiteImage.myDescription|striptags|truncate(200, true, '&hellip;') }}</dd>
        {% endif %}
        <dd><a href="{{ path('rkwebsitehelpermodule_websiteimage_display', { 'id': websiteImage.id }) }}">{{ __('Read more') }}</a>
        </dd>
    {% else %}
        <dt>{{ __('No entries found.') }}</dt>
    {% endfor %}
</dl>
