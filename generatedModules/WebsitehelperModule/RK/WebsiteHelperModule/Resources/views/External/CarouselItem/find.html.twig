{# Purpose of this template: Display a popup selector of carousel items for scribite integration #}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="{{ app.request.locale }}" lang="{{ app.request.locale }}">
<head>
    <title>{{ __('Search and select carousel item') }}</title>
    {{ pageAddAsset('stylesheet', pagevars.homepath ~ 'style/core.css') }}
    {{ pageAddAsset('stylesheet', zasset('@RKWebsiteHelperModule:css/style.css')) }}
    {{ pageAddAsset('stylesheet', zasset('@RKWebsiteHelperModule:css/finder.css')) }}
    <script type="text/javascript">/* <![CDATA[ */
        if (typeof(Zikula) == 'undefined') {var Zikula = {};}
        Zikula.Config = {'entrypoint': '{{ getModVar('ZConfig', 'entrypoint', 'index.php') }}', 'baseURL': '{{ app.request.getSchemeAndHttpHost() ~ '/' }}', 'baseURI': '{{ app.request.getBasePath() }}'}; /* ]]> */
    </script>
    {{ pageAddAsset('stylesheet', asset('bootstrap/css/bootstrap.min.css')) }}
    {{ pageAddAsset('stylesheet', asset('bootstrap/css/bootstrap-theme.min.css')) }}
    {{ pageAddAsset('javascript', asset('jquery/jquery.min.js')) }}
    {{ pageAddAsset('javascript', asset('bootstrap/js/bootstrap.min.js')) }}
    {{ pageAddAsset('javascript', zasset('@RKWebsiteHelperModule:js/RKWebsiteHelperModule.Finder.js')) }}
</head>
<body>
    <div class="container">
        <ul class="nav nav-tabs">
        <li{{ objectType == 'linker' ? ' class="active"' : '' }}><a href="{{ path('rkwebsitehelpermodule_external_finder', {'objectType': 'linker', 'editor': editorName}) }}" title="{{ __('Search and select linker') }}">{{ __('Linkers') }}</a></li>
        <li{{ objectType == 'carouselItem' ? ' class="active"' : '' }}><a href="{{ path('rkwebsitehelpermodule_external_finder', {'objectType': 'carouselItem', 'editor': editorName}) }}" title="{{ __('Search and select carousel item') }}">{{ __('Carousel items') }}</a></li>
        <li{{ objectType == 'websiteImage' ? ' class="active"' : '' }}><a href="{{ path('rkwebsitehelpermodule_external_finder', {'objectType': 'websiteImage', 'editor': editorName}) }}" title="{{ __('Search and select website image') }}">{{ __('Website images') }}</a></li>
        </ul>
        {% form_theme finderForm with [
            '@RKWebsiteHelperModule/Form/bootstrap_3.html.twig',
            'ZikulaFormExtensionBundle:Form:form_div_layout.html.twig'
        ] %}
        {{ form_start(finderForm, {attr: { id: 'rKWebsiteHelperModuleSelectorForm' }}) }}
        {{ form_errors(finderForm) }}
        <fieldset>
            <legend>{{ __('Search and select carousel item') }}</legend>
            {{ form_row(finderForm.pasteas) }}
            <br />
            <div class="form-group">
                <label for="rKWebsiteHelperModuleObjectId" class="col-sm-3 control-label">{{ __('Carousel item') }}:</label>
                <div class="col-sm-9">
                    <div id="rkwebsitehelpermoduleItemContainer">
                        <ul>
                            {% for carouselItem in items %}
                                <li>
                                    {% set itemId = carouselItem.createCompositeIdentifier() %}
                                    <a href="#" data-itemid="{{ itemId }}">{{ carouselItem.getTitleFromDisplayPattern() }}</a>
                                    <input type="hidden" id="url{{ itemId }}" value="{{ url('rkwebsitehelpermodule_carouselitem_display', { 'id': carouselItem.id }) }}" />
                                    <input type="hidden" id="title{{ itemId }}" value="{{ carouselItem.getTitleFromDisplayPattern()|e('html_attr') }}" />
                                    <input type="hidden" id="desc{{ itemId }}" value="{% set description %}{% if carouselItem.itemName is not empty %}{{ carouselItem.itemName }}{% endif %}
                                    {% endset %}{{ description|striptags|e('html_attr') }}" />
                                </li>
                            {% else %}
                                <li>{{ __('No entries found.') }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>

            {{ form_row(finderForm.sort) }}
            {{ form_row(finderForm.sortdir) }}
            {{ form_row(finderForm.num) }}
            {{ form_row(finderForm.q) }}
            <div>
                {{ pager({ display: 'page', rowcount: pager.numitems, limit: pager.itemsperpage, posvar: 'pos', maxpages: 10, route: 'rkwebsitehelpermodule_external_finder'}) }}
            </div>
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                    {{ form_widget(finderForm.update) }}
                    {{ form_widget(finderForm.cancel) }}
                </div>
            </div>
        </fieldset>
        {{ form_end(finderForm) }}
    </div>

    {#
    <div class="rkwebsitehelpermodule-finderform">
        <fieldset>
            {{ render(controller('RKWebsiteHelperModule:Admin:edit')) }}
        </fieldset>
    </div>
    #}

    {% set customJsInit %}
        <script type="text/javascript">
        /* <![CDATA[ */
            ( function($) {
                $(document).ready(function() {
                    rKWebsiteHelperModule.finder.onLoad();
                });
            })(jQuery);
        /* ]]> */
        </script>
    {% endset %}
    {{ pageAddAsset('footer', customJsInit) }}
</body>
</html>
