{# purpose of this template: build the form to edit an instance of carousel item #}
{% extends routeArea == 'admin' ? 'RKWebsitehelperModule::adminBase.html.twig' : 'RKWebsitehelperModule::base.html.twig' %}

{% block header %}
    {{ parent() }}
    {{ pageAddAsset('javascript', zasset('@RKWebsitehelperModule:js/RKWebsitehelperModule.EditFunctions.js')) }}
    {{ pageAddAsset('javascript', zasset('@RKWebsitehelperModule:js/RKWebsitehelperModule.Validation.js')) }}
    {{ pageAddAsset('javascript', pagevars.homepath ~ 'vendor/twitter/typeahead.js/dist/typeahead.bundle.min.js') }}
{% endblock %}

{% block title mode == 'create' ? __('Create carousel item') : __('Edit carousel item') %}
{% block admin_page_icon mode == 'create' ? 'plus' : 'pencil-square-o' %}
{% block content %}
    <div class="rkwebsitehelpermodule-carouselitem rkwebsitehelpermodule-edit">
{% form_theme form with [
    '@RKWebsitehelperModule/Form/bootstrap_3.html.twig',
    'ZikulaFormExtensionBundle:Form:form_div_layout.html.twig'
] %}
{{ form_start(form, {attr: {id: 'carouselItemEditForm'}}) }}
{{ form_errors(form) }}
<fieldset>
    <legend>{{ __('Content') }}</legend>
    
    {{ form_row(form.itemName) }}
    
    {{ form_row(form.title) }}
    
    {{ form_row(form.subtitle) }}
    
    {{ form_row(form.link) }}
    
    {{ form_row(form.itemImage) }}
    
    {{ form_row(form.titleColor) }}
    
    {{ form_row(form.itemStartDate) }}
    
    {{ form_row(form.intemEndDate) }}
    
    {{ form_row(form.singleItemIdentifier) }}
</fieldset>

{{ include(
    '@RKWebsitehelperModule/Carousel/includeSelectOne.html.twig',
    { group: 'carouselitem', alias: 'carousel', aliasReverse: 'carouselItems', mandatory: false, idPrefix: 'websitCarouselItem_Carousel', linkingItem: carouselitem, displayMode: 'choices', allowEditing: false }
) }}
{% if mode != 'create' %}
    {{ include('@RKWebsitehelperModule/Helper/includeStandardFieldsEdit.html.twig', { obj: carouselitem }) }}
{% endif %}

{# include display hooks #}
{% if mode != 'create' %}
    {% set hookId = carouselitem.id %}
    {% set hooks = notifyDisplayHooks(eventName='rkwebsitehelpermodule.ui_hooks.carouselitems.form_edit', id=hookId) %}
{% else %}
    {% set hooks = notifyDisplayHooks(eventName='rkwebsitehelpermodule.ui_hooks.carouselitems.form_edit', id=null) %}
{% endif %}
{% if hooks is iterable and hooks|length > 0 %}
    {% for providerArea, hook in hooks %}
        {% if providerArea != 'provider.scribite.ui_hooks.editor' %}{# fix for #664 #}
            <fieldset>
                {{ hook }}
            </fieldset>
        {% endif %}
    {% endfor %}
{% endif %}


{# include return control #}
{% if mode == 'create' %}
    <fieldset>
        <legend>{{ __('Return control') }}</legend>
        {{ form_row(form.repeatCreation) }}
    </fieldset>
{% endif %}

{# include possible submit actions #}
<div class="form-group form-buttons">
    <div class="col-sm-offset-3 col-sm-9">
        {% for action in actions %}
            {{ form_widget(attribute(form, action.id)) }}
        {% endfor %}
        {{ form_widget(form.reset) }}
        {{ form_widget(form.cancel) }}
    </div>
</div>
{{ form_end(form) }}
</div>
{% endblock %}
{% block footer %}
    {{ parent() }}

    {% set editImage = '<span class="fa fa-pencil-square-o"></span>' %}
    {% set deleteImage = '<span class="fa fa-trash-o"></span>' %}
    
    
    <script type="text/javascript">
    /* <![CDATA[ */
        
                var formButtons;
                var triggerValidation = true;
        
                function executeCustomValidationConstraints()
                {
                    rKWebsitehelperPerformCustomValidationRules('carouselItem', '{% if mode != 'create' %}{{ carouselitem.id }}{% endif %}');
                }
        
                function triggerFormValidation()
                {
                    executeCustomValidationConstraints();
                    if (!document.getElementById('carouselItemEditForm').checkValidity()) {
                        // This does not really submit the form,
                        // but causes the browser to display the error message
                        jQuery('#carouselItemEditForm').find(':submit').first().click();
                    }
                }
        
                function handleFormSubmit (event) {
                    if (triggerValidation) {
                        triggerFormValidation();
                        if (!document.getElementById('carouselItemEditForm').checkValidity()) {
                            event.preventDefault();
                            return false;
                        }
                    }
        
                    // hide form buttons to prevent double submits by accident
                    formButtons.each(function (index) {
                        jQuery(this).addClass('hidden');
                    });
        
                    return true;
                }
        
                ( function($) {
                    $(document).ready(function() {
                        $('a.lightbox').lightbox();
        
                        var allFormFields = $('#carouselItemEditForm input, #carouselItemEditForm select, #carouselItemEditForm textarea');
                        allFormFields.change(executeCustomValidationConstraints);
        
                        formButtons = $('#carouselItemEditForm .form-buttons input');
                        $('.btn-danger').first().bind('click keypress', function (event) {
                            if (!window.confirm('{{ __('Really delete this carousel item?') }}')) {
                                event.preventDefault();
                            }
                        });
                        $('#carouselItemEditForm button[type=submit]').bind('click keypress', function (event) {
                            triggerValidation = !$(this).attr('formnovalidate');
                        });
                        $('#carouselItemEditForm').submit(handleFormSubmit);
        
                        {% if mode != 'create' %}
                            triggerFormValidation();
                        {% endif %}
        
                        rKWebsitehelperInitUploadField('rkwebsitehelpermodule_carouselitem_itemImage_itemImage');
                        rKWebsitehelperInitDateField('rkwebsitehelpermodule_carouselitem_itemStartDate');
                    });
                })(jQuery);
    /* ]]> */
    </script>
{% endblock %}
