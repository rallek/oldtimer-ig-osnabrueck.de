{# purpose of this template: website images list view #}
{% extends routeArea == 'admin' ? 'RKWebsitehelperModule::adminBase.html.twig' : 'RKWebsitehelperModule::base.html.twig' %}
{% block title __('Website image list') %}
{% block admin_page_icon 'list-alt' %}
{% block content %}
<div class="rkwebsitehelpermodule-websiteimage rkwebsitehelpermodule-view">

    <p class="alert alert-info">{{ __('This entity is for webmaster usage only. Here we can store some images for graphical usage.') }}</p>

    {{ block('page_nav_links') }}

    {{ include('@RKWebsitehelperModule/WebsiteImage/viewQuickNav.html.twig', { workflowStateFilter: false }) }}{# see template file for available options #}

    {% if routeArea == 'admin' %}
    <form action="{{ path('rkwebsitehelpermodule_websiteimage_' ~ routeArea ~ 'handleselectedentries') }}" method="post" id="websiteImagesViewForm" class="form-horizontal" role="form">
        <div>
    {% endif %}
        <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover{% if routeArea == 'admin' %} table-condensed{% endif %}">
            <colgroup>
                {% if routeArea == 'admin' %}
                    <col id="cSelect" />
                {% endif %}
                <col id="cImageTitle" />
                <col id="cMyImage" />
                <col id="cMyDescription" />
                <col id="cItemActions" />
            </colgroup>
            <thead>
            <tr>
                {% if routeArea == 'admin' %}
                    <th id="hSelect" scope="col" class="text-center">
                        <input type="checkbox" id="toggleWebsiteImages" />
                    </th>
                {% endif %}
                <th id="hImageTitle" scope="col" class="text-left">
                    <a href="{{ sort.imageTitle.url }}" title="{{ __f('Sort by %s', {'%s': 'image title'}) }}" class="{{ sort.imageTitle.class }}">{{ __('Image title') }}</a>
                </th>
                <th id="hMyImage" scope="col" class="text-left">
                    <a href="{{ sort.myImage.url }}" title="{{ __f('Sort by %s', {'%s': 'my image'}) }}" class="{{ sort.myImage.class }}">{{ __('My image') }}</a>
                </th>
                <th id="hMyDescription" scope="col" class="text-left">
                    <a href="{{ sort.myDescription.url }}" title="{{ __f('Sort by %s', {'%s': 'my description'}) }}" class="{{ sort.myDescription.class }}">{{ __('My description') }}</a>
                </th>
                <th id="hItemActions" scope="col" class="text-right z-order-unsorted">{{ __('Actions') }}</th>
            </tr>
            </thead>
            <tbody>
        
        {% for websiteImage in items %}
            <tr>
                {% if routeArea == 'admin' %}
                    <td headers="hSelect" class="text-center">
                        <input type="checkbox" name="items[]" value="{{ websiteImage.id }}" class="websiteimages-checkbox" />
                    </td>
                {% endif %}
                <td headers="hImageTitle" class="text-left">
                    {{ websiteImage.imageTitle }}
                </td>
                <td headers="hMyImage" class="text-left">
                    {% if websiteImage.myImageMeta|default %}
                    <a href="{{ websiteImage.myImageUrl }}" title="{{ websiteImage.getTitleFromDisplayPattern()|e('html_attr') }}"{% if websiteImage.myImageMeta.isImage %} class="lightbox"{% endif %}>
                    {% if websiteImage.myImageMeta.isImage %}
                        {% set thumbOptions = attribute(thumbRuntimeOptions, 'websiteImageMyImage') %}
                        <img src="{{ websiteImage.myImage.getPathname()|imagine_filter('zkroot', thumbOptions) }}" alt="{{ websiteImage.getTitleFromDisplayPattern()|e('html_attr') }}" width="{{ thumbOptions.thumbnail.size[0] }}" height="{{ thumbOptions.thumbnail.size[1] }}" class="img-thumbnail" />
                    {% else %}
                        {{ __('Download') }} ({{ websiteImage.myImageMeta.size|rkwebsitehelpermodule_fileSize(websiteImage.myImage.getPathname(), false, false) }})
                    {% endif %}
                    </a>
                    {% endif %}
                </td>
                <td headers="hMyDescription" class="text-left">
                    {{ websiteImage.myDescription|safeHtml }}
                </td>
                <td id="itemActions{{ websiteImage.id }}" headers="hItemActions" class="actions text-right nowrap z-w02">
                    {% set itemActions = knp_menu_get('RKWebsitehelperModule:ItemActionsMenu:menu', [], { entity: websiteImage, area: routeArea, context: 'view' }) %}
                    <div class="dropdown">
                        <a id="itemActions{{ websiteImage.id }}DropDownToggle" role="button" data-toggle="dropdown" data-target="#" href="javascript:void(0);" class="hidden dropdown-toggle"><i class="fa fa-tasks"></i> <span class="caret"></span></a>
                        
                        {{ knp_menu_render(itemActions, { template: 'ZikulaMenuModule:Override:actions.html.twig' }) }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr class="z-{{ routeArea == 'admin' ? 'admin' : 'data' }}tableempty">
                <td class="text-left" colspan="{% if routeArea == 'admin' %}5{% else %}4{% endif %}">
            {{ __('No website images found.') }}
              </td>
            </tr>
        {% endfor %}
        
            </tbody>
        </table>
        </div>
        
        {% if showAllEntries != 1 and pager|default %}
            {{ pager({ rowcount: pager.numitems, limit: pager.itemsperpage, display: 'page', route: 'rkwebsitehelpermodule_websiteimage_' ~ routeArea ~ 'view'}) }}
        {% endif %}
    {% if routeArea == 'admin' %}
            <fieldset>
                <label for="rKWebsitehelperModuleAction" class="col-sm-3 control-label">{{ __('With selected website images') }}</label>
                <div class="col-sm-6">
                    <select id="rKWebsitehelperModuleAction" name="action" class="form-control input-sm">
                        <option value="">{{ __('Choose action') }}</option>
                        <option value="delete" title="{{ __('Delete content permanently.') }}">{{ __('Delete') }}</option>
                    </select>
                </div>
                <div class="col-sm-3">
                    <input type="submit" value="{{ __('Submit') }}" class="btn btn-default btn-sm" />
                </div>
            </fieldset>
        </div>
    </form>
    {% endif %}

    {{ block('display_hooks') }}
</div>
{% endblock %}
{% block page_nav_links %}
    {% if canBeCreated %}
        {% if hasPermission('RKWebsitehelperModule:WebsiteImage:', '::', 'ACCESS_EDIT') %}
            {% set createTitle = __('Create website image') %}
            <a href="{{ path('rkwebsitehelpermodule_websiteimage_' ~ routeArea ~ 'edit') }}" title="{{ createTitle|e('html_attr') }}" class="fa fa-plus">{{ createTitle }}</a>
        {% endif %}
    {% endif %}
    {% if showAllEntries == 1 %}
        {% set linkTitle = __('Back to paginated view') %}
        <a href="{{ path('rkwebsitehelpermodule_websiteimage_' ~ routeArea ~ 'view') }}" title="{{ linkTitle|e('html_attr') }}" class="fa fa-table">{{ linkTitle }}</a>
    {% else %}
        {% set linkTitle = __('Show all entries') %}
        <a href="{{ path('rkwebsitehelpermodule_websiteimage_' ~ routeArea ~ 'view', { all: 1 }) }}" title="{{ linkTitle|e('html_attr') }}" class="fa fa-table">{{ linkTitle }}</a>
    {% endif %}
{% endblock %}
{% block display_hooks %}
    
    {# here you can activate calling display hooks for the view page if you need it #}
    {# % if routeArea != 'admin' %}
        {% set hooks = notifyDisplayHooks(eventName='rkwebsitehelpermodule.ui_hooks.websiteimages.display_view', urlObject=currentUrlObject) %}
        {% for providerArea, hook in hooks %}
            {{ hook }}
        {% endfor %}
    {% endif % #}
{% endblock %}
{% block footer %}
    {{ parent() }}

<script type="text/javascript">
/* <![CDATA[ */
    ( function($) {
        $(document).ready(function() {
            $('a.lightbox').lightbox();
            $('.rkwebsitehelpermodule-websiteimage .dropdown > ul').removeClass('list-inline').addClass('list-unstyled dropdown-menu dropdown-menu-right');
            $('.rkwebsitehelpermodule-websiteimage .dropdown > ul a').each(function (index) {
                $(this).html($(this).html() + $(this).find('i').first().data('original-title'));
            });
            $('.rkwebsitehelpermodule-websiteimage .dropdown > ul a i').addClass('fa-fw');
            $('.rkwebsitehelpermodule-websiteimage .dropdown-toggle').removeClass('hidden').dropdown();
            {% if routeArea == 'admin' %}
                {# init the "toggle all" functionality #}
                if ($('#toggleWebsiteImages').length > 0) {
                    $('#toggleWebsiteImages').click(function (event) {
                        $('websiteimages-checkbox').prop('checked', $(this).prop('checked'));
                    });
                }
            {% endif %}
        });
    })(jQuery);
/* ]]> */
</script>
{% endblock %}
