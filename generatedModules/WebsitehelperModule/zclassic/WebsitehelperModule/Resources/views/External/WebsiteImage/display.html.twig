{# Purpose of this template: Display one certain website image within an external context #}
<div id="websiteImage{$websiteImage.id}" class="rkwebsitehelpermodule-external-websiteimage">
{% if displayMode == 'link' %}
    <p class="rkwebsitehelpermodule-external-link">
    <a href="{{ path('rkwebsitehelpermodule_websiteimage_display', { 'id': websiteImage.id }) }}" title="{{ websiteImage.getTitleFromDisplayPattern()|e('html_attr') }}">
    {{ websiteImage.getTitleFromDisplayPattern()|notifyFilters('websitehelper.filter_hooks.websiteimages.filter') }}
    </a>
    </p>
{% endif %}
{% if hasPermission('RKWebsitehelperModule::', '::', 'ACCESS_EDIT') %}
    {# for normal users without edit permission show only the actual file per default #}
    {% if displayMode == 'embed' %}
        <p class="rkwebsitehelpermodule-external-title">
            <strong>{{ websiteImage.getTitleFromDisplayPattern()|notifyFilters('websitehelper.filter_hooks.websiteimages.filter') }}</strong>
        </p>
    {% endif %}
{% endif %}

{% if displayMode == 'link' %}
{% elseif displayMode == 'embed' %}
    <div class="rkwebsitehelpermodule-external-snippet">
        {% if websiteImage.myImageMeta|default %}
        <a href="{{ websiteImage.myImageUrl }}" title="{{ websiteImage.getTitleFromDisplayPattern()|e('html_attr') }}"{% if websiteImage.myImageMeta.isImage %} class="lightbox"{% endif %}>
        {% if websiteImage.myImageMeta.isImage %}
            {% set thumbOptions = attribute(thumbRuntimeOptions, 'websiteImageMyImage') %}
            <img src="{{ websiteImage.myImage.getPathname()|imagine_filter('zkroot', thumbOptions) }}" alt="{{ websiteImage.getTitleFromDisplayPattern()|e('html_attr') }}" width="{{ thumbOptions.thumbnail.size[0] }}" height="{{ thumbOptions.thumbnail.size[1] }}" class="img-thumbnail" />
        {% else %}
            {{ __('Download') }} ({{ websiteImage.myImageMeta.size|rkwebsitehelpermodule_fileSize(websiteImage.myImage.getPathname(), false, false) }})
        {% endif %}
        </a>
        {% endif %}
    </div>

    {# you can distinguish the context like this: #}
    {# % if source == 'contentType' %}
        ...
    {% elseif source == 'scribite' %}
        ...
    {% endif % #}

    {# you can enable more details about the item: #}
    {#
        <p class="rkwebsitehelpermodule-external-description">
            {% if websiteImage.myDescription is not empty %}{{ websiteImage.myDescription }}<br />{% endif %}
        </p>
    #}
{% endif %}
</div>
