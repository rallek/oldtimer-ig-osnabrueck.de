{# purpose of this template: carousel items display view #}
{% extends routeArea == 'admin' ? 'RKWebsitehelperModule::adminBase.html.twig' : 'RKWebsitehelperModule::base.html.twig' %}
{% block pageTitle %}{{ carouselItem.getTitleFromDisplayPattern()|default(__('Carousel item')) }}{% endblock %}
{% block title %}
    {% set templateTitle = carouselItem.getTitleFromDisplayPattern()|default(__('Carousel item')) %}
    {{ templateTitle|notifyFilters('rkwebsitehelpermodule.filter_hooks.carouselitems.filter') }}
    {% set itemActions = knp_menu_get('RKWebsitehelperModule:ItemActionsMenu:menu', [], { entity: carouselItem, area: routeArea, context: 'display' }) %}
    <div class="dropdown">
        <a id="itemActions{{ carouselItem.id }}DropDownToggle" role="button" data-toggle="dropdown" data-target="#" href="javascript:void(0);" class="hidden dropdown-toggle"><i class="fa fa-tasks"></i> {{ __('Actions') }} <span class="caret"></span></a>
        
        {{ knp_menu_render(itemActions, { template: 'ZikulaMenuModule:Override:actions.html.twig' }) }}
    </div>
    <script type="text/javascript">
    /* <![CDATA[ */
        ( function($) {
            $(document).ready(function() {
                $('h2 .dropdown > ul, h3 .dropdown > ul').removeClass('list-inline').addClass('list-unstyled dropdown-menu');
                $('h2 .dropdown > ul a, h3 .dropdown > ul a').each(function (index) {
                    $(this).html($(this).html() + $(this).find('i').first().data('original-title'));
                });
                $('h2 .dropdown > ul a i, h3 .dropdown > ul a i').addClass('fa-fw');
                $('h2 .dropdown-toggle, h3 .dropdown-toggle').removeClass('hidden').dropdown();
            });
        })(jQuery);
    /* ]]> */
    </script>
{% endblock %}
{% block admin_page_icon 'eye' %}
{% block content %}
    <div class="rkwebsitehelpermodule-carouselitem rkwebsitehelpermodule-display">


    <dl>
        {% if carouselItem.itemName is not empty %}
            <dt>{{ __('Item name') }}</dt>
            <dd>{{ carouselItem.itemName }}</dd>
        {% endif %}
        {% if carouselItem.title is not empty %}
            <dt>{{ __('Title') }}</dt>
            <dd>{{ carouselItem.title }}</dd>
        {% endif %}
        {% if carouselItem.subtitle is not empty %}
            <dt>{{ __('Subtitle') }}</dt>
            <dd>{{ carouselItem.subtitle }}</dd>
        {% endif %}
        {% if carouselItem.link is not empty %}
            <dt>{{ __('Link') }}</dt>
            <dd>{{ carouselItem.link }}</dd>
        {% endif %}
        {% if carouselItem.itemImage is not empty %}
            <dt>{{ __('Item image') }}</dt>
            <dd>{% if carouselItem.itemImage is not empty and carouselItem.itemImageMeta|default %}
                        <a href="{{ carouselItem.itemImageUrl }}" title="{{ carouselItem.getTitleFromDisplayPattern()|e('html_attr') }}"{% if carouselItem.itemImageMeta.isImage %} class="lightbox"{% endif %}>
            {% if carouselItem.itemImageMeta.isImage %}
                {% set thumbOptions = attribute(thumbRuntimeOptions, 'carouselItemItemImage') %}
                <img src="{{ carouselItem.itemImage.getPathname()|imagine_filter('zkroot', thumbOptions) }}" alt="{{ carouselItem.getTitleFromDisplayPattern()|e('html_attr') }}" width="{{ thumbOptions.thumbnail.size[0] }}" height="{{ thumbOptions.thumbnail.size[1] }}" class="img-thumbnail" />
            {% else %}
                {{ __('Download') }} ({{ carouselItem.itemImageMeta.size|rkwebsitehelpermodule_fileSize(carouselItem.itemImage.getPathname(), false, false) }})
            {% endif %}
            </a>
            {% else %}&nbsp;{% endif %}
            </dd>
        {% endif %}
        {% if carouselItem.titleColor is not empty %}
            <dt>{{ __('Title color') }}</dt>
            <dd>{{ carouselItem.titleColor }}</dd>
        {% endif %}
        {% if carouselItem.itemStartDate is not empty %}
            <dt>{{ __('Item start date') }}</dt>
            <dd>{{ carouselItem.itemStartDate|localizeddate('medium', 'none') }}</dd>
        {% endif %}
        {% if carouselItem.intemEndDate is not empty %}
            <dt>{{ __('Intem end date') }}</dt>
            <dd>{{ carouselItem.intemEndDate|localizeddate('medium', 'none') }}</dd>
        {% endif %}
        {% if carouselItem.singleItemIdentifier is not empty %}
            <dt>{{ __('Single item identifier') }}</dt>
            <dd>{{ carouselItem.singleItemIdentifier }}</dd>
        {% endif %}
        {% if carouselItem.carousel|default %}
        <dt>{{ __('Carousel') }}</dt>
        <dd>
          {% if app.request.query.get('theme') != 'ZikulaPrinterTheme' %}
              <a href="{{ path('rkwebsitehelpermodule_carousel_' ~ routeArea ~ 'display', { 'id': carouselItem.carousel.id }) }}">{% spaceless %}
                {{ carouselItem.carousel.getTitleFromDisplayPattern() }}
              {% endspaceless %}</a>
              <a id="carouselItem{{ carouselItem.carousel.id }}Display" href="{{ path('rkwebsitehelpermodule_carousel_' ~ routeArea ~ 'display', { 'id': carouselItem.carousel.id, 'theme': 'ZikulaPrinterTheme' }) }}" title="{{ __('Open quick view window')|e('html_attr') }}" class="hidden"><span class="fa fa-eye"></span></a>
              <script type="text/javascript">
              /* <![CDATA[ */
                  ( function($) {
                      $(document).ready(function() {
                          rKWebsitehelperInitInlineWindow($('carouselItem{{ carouselItem.carousel.id }}Display'), '{{ carouselItem.carousel.getTitleFromDisplayPattern()|e('js') }}');
                      });
                  })(jQuery);
              /* ]]> */
              </script>
              {% else %}
                {{ carouselItem.carousel.getTitleFromDisplayPattern() }}
              {% endif %}
            </dd>
        {% endif %}
        
    </dl>
    {{ include('@RKWebsitehelperModule/Helper/includeStandardFieldsDisplay.html.twig', { obj: carouselItem }) }}

    {% if app.request.query.get('theme') != 'ZikulaPrinterTheme' %}
        {# include display hooks #}
        {{ block('display_hooks') }}
    {% endif %}
</div>
{% endblock %}
{% block display_hooks %}
    {% set hooks = notifyDisplayHooks(eventName='rkwebsitehelpermodule.ui_hooks.carouselitems.display_view', id=carouselItem.id, urlObject=currentUrlObject) %}
    {% for providerArea, hook in hooks %}
        {% if providerArea != 'provider.scribite.ui_hooks.editor' %}{# fix for #664 #}
            {{ hook }}
        {% endif %}
    {% endfor %}
{% endblock %}
{% block footer %}
    {{ parent() }}


{% if app.request.query.get('theme') != 'ZikulaPrinterTheme' %}
    <script type="text/javascript">
    /* <![CDATA[ */
        ( function($) {
            $(document).ready(function() {
                $('a.lightbox').lightbox();
            });
        })(jQuery);
    /* ]]> */
    </script>
{% endif %}
{% endblock %}
