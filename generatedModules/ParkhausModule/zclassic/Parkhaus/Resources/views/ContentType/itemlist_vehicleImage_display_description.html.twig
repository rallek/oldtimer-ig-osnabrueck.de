{# Purpose of this template: Display vehicle images within an external context #}
<dl>
    {% for vehicleImage in items %}
        <dt>{{ vehicleImage.getTitleFromDisplayPattern() }}</dt>
        {% if vehicleImage.description %}
            <dd>{{ vehicleImage.description|striptags|truncate(200, true, '&hellip;') }}</dd>
        {% endif %}
        <dd><a href="{{ path('rkparkhausmodule_vehicleimage_display', { 'id': vehicleImage.id }) }}">{{ __('Read more') }}</a>
        </dd>
    {% else %}
        <dt>{{ __('No entries found.') }}</dt>
    {% endfor %}
</dl>
