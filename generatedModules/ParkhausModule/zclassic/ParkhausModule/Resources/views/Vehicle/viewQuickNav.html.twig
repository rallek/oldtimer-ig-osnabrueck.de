{# purpose of this template: vehicles view filter form #}
{% if hasPermission('RKParkhausModule:Vehicle:', '::', 'ACCESS_EDIT') %}
    {% form_theme quickNavForm with [
        'bootstrap_3_layout.html.twig'
    ] %}
    {{ form_start(quickNavForm, {attr: {id: 'rKParkhausModuleVehicleQuickNavForm', class: 'rkparkhausmodule-quicknav navbar-form', role: 'navigation'}}) }}
    {{ form_errors(quickNavForm) }}
    <fieldset>
        <h3>{{ __('Quick navigation') }}</h3>
        {% if workflowStateFilter is defined and workflowStateFilter != true %}
            <div class="hidden">
        {% endif %}
            {{ form_row(quickNavForm.workflowState) }}
        {% if workflowStateFilter is defined and workflowStateFilter != true %}
            </div>
        {% endif %}
        {% if vehicleTypeFilter is defined and vehicleTypeFilter != true %}
            <div class="hidden">
        {% endif %}
            {{ form_row(quickNavForm.vehicleType) }}
        {% if vehicleTypeFilter is defined and vehicleTypeFilter != true %}
            </div>
        {% endif %}
        {% if ownerFilter is defined and ownerFilter != true %}
            <div class="hidden">
        {% endif %}
            {{ form_row(quickNavForm.owner) }}
        {% if ownerFilter is defined and ownerFilter != true %}
            </div>
        {% endif %}
        {% if searchFilter is defined and searchFilter != true %}
            <div class="hidden">
        {% endif %}
            {{ form_row(quickNavForm.q) }}
        {% if searchFilter is defined and searchFilter != true %}
            </div>
        {% endif %}
        {% if sorting is defined and sorting != true %}
            <div class="hidden">
        {% endif %}
            {{ form_row(quickNavForm.sort) }}
            {{ form_row(quickNavForm.sortdir) }}
        {% if sorting is defined and sorting != true %}
            </div>
        {% endif %}
        {% if pageSizeSelector is defined and pageSizeSelector != true %}
            <div class="hidden">
        {% endif %}
            {{ form_row(quickNavForm.num) }}
        {% if pageSizeSelector is defined and pageSizeSelector != true %}
            </div>
        {% endif %}
        {% if showVehicleOwnerFilter is defined and showVehicleOwnerFilter != true %}
            <div class="hidden">
        {% endif %}
            {{ form_row(quickNavForm.showVehicleOwner) }}
        {% if showVehicleOwnerFilter is defined and showVehicleOwnerFilter != true %}
            </div>
        {% endif %}
        {{ form_widget(quickNavForm.updateview) }}
    </fieldset>
    {{ form_end(quickNavForm) }}
    <script type="text/javascript">
    /* <![CDATA[ */
        ( function($) {
            $(document).ready(function() {
                rKParkhausInitQuickNavigation('vehicle');
                {% if searchFilter|default and searchFilter == false %}
                    {# we can hide the submit button if we have no quick search field #}
                    $('#rkparkhausmodule_vehiclequicknav_updateview').addClass('hidden');
                {% endif %}
            });
        })(jQuery);
    /* ]]> */
    </script>
{% endif %}
