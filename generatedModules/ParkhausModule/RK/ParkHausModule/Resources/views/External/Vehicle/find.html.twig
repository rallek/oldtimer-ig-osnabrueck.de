{# Purpose of this template: Display a popup selector of vehicles for scribite integration #}
{% set useFinder = true %}
{% extends 'RKParkHausModule::raw.html.twig' %}
{% block title __('Search and select vehicle') %}
{% block content %}
    <div class="container">
        <ul class="nav nav-tabs">
        <li{{ objectType == 'vehicle' ? ' class="active"' : '' }}><a href="{{ path('rkparkhausmodule_external_finder', {'objectType': 'vehicle', 'editor': editorName}) }}" title="{{ __('Search and select vehicle') }}">{{ __('Vehicles') }}</a></li>
        <li{{ objectType == 'vehicleImage' ? ' class="active"' : '' }}><a href="{{ path('rkparkhausmodule_external_finder', {'objectType': 'vehicleImage', 'editor': editorName}) }}" title="{{ __('Search and select vehicle image') }}">{{ __('Vehicle images') }}</a></li>
        </ul>
        {% form_theme finderForm with [
            '@RKParkHausModule/Form/bootstrap_3.html.twig',
            'ZikulaFormExtensionBundle:Form:form_div_layout.html.twig'
        ] %}
        {{ form_start(finderForm, {attr: { id: 'rKParkHausModuleSelectorForm' }}) }}
        {{ form_errors(finderForm) }}
        <fieldset>
            <legend>{{ __('Search and select vehicle') }}</legend>
            {{ form_row(finderForm.pasteas) }}
            <br />
            <div class="form-group">
                <label class="col-sm-3 control-label">{{ __('Vehicle') }}:</label>
                <div class="col-sm-9">
                    <div id="rkparkhausmoduleItemContainer">
                        <ul>
                            {% for vehicle in items %}
                                <li>
                                    {% set itemId = vehicle.createCompositeIdentifier() %}
                                    <a href="#" data-itemid="{{ itemId }}">{{ vehicle.getTitleFromDisplayPattern() }}</a>
                                    <input type="hidden" id="url{{ itemId }}" value="{{ url('rkparkhausmodule_vehicle_display', { 'id': vehicle.id }) }}" />
                                    <input type="hidden" id="title{{ itemId }}" value="{{ vehicle.getTitleFromDisplayPattern()|e('html_attr') }}" />
                                    <input type="hidden" id="desc{{ itemId }}" value="{% set description %}{% if vehicle.vehicleDescriptionTeaser is not empty %}{{ vehicle.vehicleDescriptionTeaser }}{% endif %}
                                    {% endset %}{{ description|striptags|e('html_attr') }}" />
                                </li>
                            {% else %}
                                <li>{{ __('No entries found.') }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>

            {{ form_row(finderForm.sort) }}
            {{ form_row(finderForm.sortdir) }}
            {{ form_row(finderForm.num) }}
            {{ form_row(finderForm.q) }}
            <div>
                {{ pager({ display: 'page', rowcount: pager.numitems, limit: pager.itemsperpage, posvar: 'pos', maxpages: 10, route: 'rkparkhausmodule_external_finder'}) }}
            </div>
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                    {{ form_widget(finderForm.update) }}
                    {{ form_widget(finderForm.cancel) }}
                </div>
            </div>
        </fieldset>
        {{ form_end(finderForm) }}
    </div>

    {#
    <div class="rkparkhausmodule-finderform">
        <fieldset>
            {{ render(controller('RKParkHausModule:Vehicle:edit')) }}
        </fieldset>
    </div>
    #}

    <script type="text/javascript">
    /* <![CDATA[ */
        ( function($) {
            $(document).ready(function() {
                rKParkHausModule.finder.onLoad();
            });
        })(jQuery);
    /* ]]> */
    </script>
{% endblock %}
