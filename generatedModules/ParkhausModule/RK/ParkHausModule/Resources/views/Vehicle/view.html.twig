{# purpose of this template: vehicles list view #}
{% extends routeArea == 'admin' ? 'RKParkHausModule::adminBase.html.twig' : 'RKParkHausModule::base.html.twig' %}
{% block title __('Vehicle list') %}
{% block admin_page_icon 'list-alt' %}
{% block content %}
<div class="rkparkhausmodule-vehicle rkparkhausmodule-view">

    <p class="alert alert-info">{{ __('please add your vehicle. You will be able to add some images in a vehicle specific album. 
    Not all fields are mandatory. Feel free to fill what fits best to your vehicle.') }}</p>

    {{ block('page_nav_links') }}

    {{ include('@RKParkHausModule/Vehicle/viewQuickNav.html.twig') }}{# see template file for available options #}

    {% if routeArea == 'admin' %}
    <form action="{{ path('rkparkhausmodule_vehicle_' ~ routeArea ~ 'handleselectedentries') }}" method="post" id="vehiclesViewForm" class="form-horizontal" role="form">
        <div>
    {% endif %}
        <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover{% if routeArea == 'admin' %} table-condensed{% endif %}">
            <colgroup>
                {% if routeArea == 'admin' %}
                    <col id="cSelect" />
                {% endif %}
                {% if routeArea == 'admin' %}
                <col id="cWorkflowState" />
                {% endif %}
                <col id="cVehicleImage" />
                <col id="cVehicleDescriptionTeaser" />
                <col id="cManufacturer" />
                <col id="cModel" />
                <col id="cStillMyOwn" />
                <col id="cItemActions" />
            </colgroup>
            <thead>
            <tr>
                {% if routeArea == 'admin' %}
                    <th id="hSelect" scope="col" class="text-center">
                        <input type="checkbox" id="toggleVehicles" />
                    </th>
                {% endif %}
                {% if routeArea == 'admin' %}
                <th id="hWorkflowState" scope="col" class="text-left">
                    <a href="{{ sort.workflowState.url }}" title="{{ __f('Sort by %s', {'%s': 'state'}) }}" class="{{ sort.workflowState.class }}">{{ __('State') }}</a>
                </th>
                {% endif %}
                <th id="hVehicleImage" scope="col" class="text-left z-order-unsorted">
                    {{ __('Vehicle image') }}
                </th>
                <th id="hVehicleDescriptionTeaser" scope="col" class="text-left z-order-unsorted">
                    {{ __('Vehicle description teaser') }}
                </th>
                <th id="hManufacturer" scope="col" class="text-left z-order-unsorted">
                    {{ __('Manufacturer') }}
                </th>
                <th id="hModel" scope="col" class="text-left z-order-unsorted">
                    {{ __('Model') }}
                </th>
                <th id="hStillMyOwn" scope="col" class="text-center">
                    <a href="{{ sort.stillMyOwn.url }}" title="{{ __f('Sort by %s', {'%s': 'still my own'}) }}" class="{{ sort.stillMyOwn.class }}">{{ __('Still my own') }}</a>
                </th>
                <th id="hItemActions" scope="col" class="text-right z-order-unsorted">{{ __('Actions') }}</th>
            </tr>
            </thead>
            <tbody>
        
        {% for vehicle in items %}
            <tr>
                {% if routeArea == 'admin' %}
                    <td headers="hSelect" class="text-center">
                        <input type="checkbox" name="items[]" value="{{ vehicle.id }}" class="vehicles-checkbox" />
                    </td>
                {% endif %}
                {% if routeArea == 'admin' %}<td headers="hWorkflowState" class="text-left nowrap">
                    {{ vehicle.workflowState|rkparkhausmodule_objectState }}
                </td>
                {% endif %}<td headers="hVehicleImage" class="text-left">
                    {% if vehicle.vehicleImage is not empty and vehicle.vehicleImageMeta|default %}
                                <a href="{{ vehicle.vehicleImageUrl }}" title="{{ vehicle.getTitleFromDisplayPattern()|e('html_attr') }}"{% if vehicle.vehicleImageMeta.isImage %} class="lightbox"{% endif %}>
                    {% if vehicle.vehicleImageMeta.isImage %}
                        {% set thumbOptions = attribute(thumbRuntimeOptions, 'vehicleVehicleImage') %}
                        <img src="{{ vehicle.vehicleImage.getPathname()|imagine_filter('zkroot', thumbOptions) }}" alt="{{ vehicle.getTitleFromDisplayPattern()|e('html_attr') }}" width="{{ thumbOptions.thumbnail.size[0] }}" height="{{ thumbOptions.thumbnail.size[1] }}" class="img-thumbnail" />
                    {% else %}
                        {{ __('Download') }} ({{ vehicle.vehicleImageMeta.size|rkparkhausmodule_fileSize(vehicle.vehicleImage.getPathname(), false, false) }})
                    {% endif %}
                    </a>
                    {% else %}&nbsp;{% endif %}
                </td>
                <td headers="hVehicleDescriptionTeaser" class="text-left">
                    {{ vehicle.vehicleDescriptionTeaser|safeHtml }}
                </td>
                <td headers="hManufacturer" class="text-left">
                    {{ vehicle.manufacturer }}
                </td>
                <td headers="hModel" class="text-left">
                    {{ vehicle.model }}
                </td>
                <td headers="hStillMyOwn" class="text-center">
                    {% set itemid = vehicle.createCompositeIdentifier() %}
                    <a id="toggleStillMyOwn{{ itemid }}" href="javascript:void(0);" class="hidden">
                    {% if vehicle.stillMyOwn %}
                        <i class="cursor-pointer fa fa-check" id="yesstillmyown_{{ itemid }}" title="{{ __('This setting is enabled. Click here to disable it.') }}"></i>
                        <i class="cursor-pointer fa fa-times hidden" id="nostillmyown_{{ itemid }}" title="{{ __('This setting is disabled. Click here to enable it.') }}"></i>
                    {% else %}
                        <i class="cursor-pointer fa fa-check hidden" id="yesstillmyown_{{ itemid }}" title="{{ __('This setting is enabled. Click here to disable it.') }}"></i>
                        <i class="cursor-pointer fa fa-times" id="nostillmyown_{{ itemid }}" title="{{ __('This setting is disabled. Click here to enable it.') }}"></i>
                    {% endif %}
                    </a>
                    <noscript><div id="noscriptStillMyOwn{{ itemid }}">
                        {% if vehicle.stillMyOwn %}
                            <i class="fa fa-check" title="{{ __('Yes') }}"></i>
                        {% else %}
                            <i class="fa fa-times" title="{{ __('No') }}"></i>
                        {% endif %}
                    </div></noscript>
                </td>
                <td id="itemActions{{ vehicle.id }}" headers="hItemActions" class="actions text-right nowrap z-w02">
                    {% set itemActions = knp_menu_get('RKParkHausModule:ItemActionsMenu:menu', [], { entity: vehicle, area: routeArea, context: 'view' }) %}
                    <div class="dropdown">
                        <a id="itemActions{{ vehicle.id }}DropDownToggle" role="button" data-toggle="dropdown" data-target="#" href="javascript:void(0);" class="hidden dropdown-toggle"><i class="fa fa-tasks"></i> <span class="caret"></span></a>
                        
                        {{ knp_menu_render(itemActions, { template: 'ZikulaMenuModule:Override:actions.html.twig' }) }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr class="z-{{ routeArea == 'admin' ? 'admin' : 'data' }}tableempty">
                <td class="text-left" colspan="{% if routeArea == 'admin' %}8{% else %}7{% endif %}">
            {{ __('No vehicles found.') }}
              </td>
            </tr>
        {% endfor %}
        
            </tbody>
        </table>
        </div>
        
        {% if showAllEntries != 1 and pager|default %}
            {{ pager({ rowcount: pager.numitems, limit: pager.itemsperpage, display: 'page', route: 'rkparkhausmodule_vehicle_' ~ routeArea ~ 'view'}) }}
        {% endif %}
    {% if routeArea == 'admin' %}
            <fieldset>
                <label for="rKParkHausModuleAction" class="col-sm-3 control-label">{{ __('With selected vehicles') }}</label>
                <div class="col-sm-6">
                    <select id="rKParkHausModuleAction" name="action" class="form-control input-sm">
                        <option value="">{{ __('Choose action') }}</option>
                        <option value="delete" title="{{ __('Delete content permanently.') }}">{{ __('Delete') }}</option>
                    </select>
                </div>
                <div class="col-sm-3">
                    <input type="submit" value="{{ __('Submit') }}" class="btn btn-default btn-sm" />
                </div>
            </fieldset>
        </div>
    </form>
    {% endif %}

    {{ block('display_hooks') }}
</div>
{% endblock %}
{% block page_nav_links %}
    {% if canBeCreated %}
        {% if hasPermission('RKParkHausModule:Vehicle:', '::', 'ACCESS_EDIT') %}
            {% set createTitle = __('Create vehicle') %}
            <a href="{{ path('rkparkhausmodule_vehicle_' ~ routeArea ~ 'edit') }}" title="{{ createTitle|e('html_attr') }}" class="fa fa-plus">{{ createTitle }}</a>
        {% endif %}
    {% endif %}
    {% if showAllEntries == 1 %}
        {% set linkTitle = __('Back to paginated view') %}
        <a href="{{ path('rkparkhausmodule_vehicle_' ~ routeArea ~ 'view') }}" title="{{ linkTitle|e('html_attr') }}" class="fa fa-table">{{ linkTitle }}</a>
    {% else %}
        {% set linkTitle = __('Show all entries') %}
        <a href="{{ path('rkparkhausmodule_vehicle_' ~ routeArea ~ 'view', { all: 1 }) }}" title="{{ linkTitle|e('html_attr') }}" class="fa fa-table">{{ linkTitle }}</a>
    {% endif %}
{% endblock %}
{% block display_hooks %}
    
    {# here you can activate calling display hooks for the view page if you need it #}
    {# % if routeArea != 'admin' %}
        {% set hooks = notifyDisplayHooks(eventName='rkparkhausmodule.ui_hooks.vehicles.display_view', urlObject=currentUrlObject) %}
        {% for providerArea, hook in hooks %}
            {{ hook }}
        {% endfor %}
    {% endif % #}
{% endblock %}
{% block footer %}
    {{ parent() }}

    <script type="text/javascript">
    /* <![CDATA[ */
        ( function($) {
            $(document).ready(function() {
                $('a.lightbox').lightbox();
                $('.rkparkhausmodule-vehicle .dropdown > ul').removeClass('list-inline').addClass('list-unstyled dropdown-menu dropdown-menu-right');
                $('.rkparkhausmodule-vehicle .dropdown > ul a').each(function (index) {
                    $(this).html($(this).html() + $(this).find('i').first().data('original-title'));
                });
                $('.rkparkhausmodule-vehicle .dropdown > ul a i').addClass('fa-fw');
                $('.rkparkhausmodule-vehicle .dropdown-toggle').removeClass('hidden').dropdown();
                {% for vehicle in items %}
                    {% set itemid = vehicle.createCompositeIdentifier() %}
                    rKParkHausInitToggle('vehicle', 'stillMyOwn', '{{ itemid|e('js') }}');
                {% endfor %}
                {% if routeArea == 'admin' %}
                    {# init the "toggle all" functionality #}
                    if ($('#toggleVehicles').length > 0) {
                        $('#toggleVehicles').click(function (event) {
                            $('.vehicles-checkbox').prop('checked', $(this).prop('checked'));
                        });
                    }
                {% endif %}
            });
        })(jQuery);
    /* ]]> */
    </script>
{% endblock %}
