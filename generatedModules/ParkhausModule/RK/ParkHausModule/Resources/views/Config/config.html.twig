{# purpose of this template: module configuration page #}
{% extends 'RKParkHausModule::adminBase.html.twig' %}
{% block title __('Settings') %}
{% block admin_page_icon 'wrench' %}
{% block content %}
    <div class="rkparkhausmodule-config">
        {% form_theme form with [
            '@RKParkHausModule/Form/bootstrap_3.html.twig',
            'ZikulaFormExtensionBundle:Form:form_div_layout.html.twig'
        ] %}
        {{ form_start(form) }}
        <ul class="nav nav-pills">
        {% set tabTitle = __('Owner refresh') %}
        <liclass="active" role="presentation">
            <a id="vars1Tab" href="#tab1" title="{{ tabTitle|e('html_attr') }}" role="tab" data-toggle="tab">{{ tabTitle }}</a>
        </li>
        {% set tabTitle = __('Listviews') %}
        <li role="presentation">
            <a id="vars2Tab" href="#tab2" title="{{ tabTitle|e('html_attr') }}" role="tab" data-toggle="tab">{{ tabTitle }}</a>
        </li>
        {% set tabTitle = __('Images') %}
        <liclass=" dropdown" role="presentation">
            <a id="imagesTabDrop" class="dropdown-toggle" href="#" data-toggle="dropdown" aria-controls="imagesTabDropSections" aria-expanded="false">{{ tabTitle }}<span class="caret"></span></a>
            <ul id="imagesTabDropSections" class="dropdown-menu" aria-labelledby="imagesTabDrop">
            <li>
                <a id="imagesVehicleTitleImageTab" href="#tabImagesVehicleTitleImage" role="tab" data-toggle="tab" aria-controls="tabImagesVehicleTitleImage">Vehicles title image</a>
            </li>
            <li>
                <a id="imagesVehicleVehicleImageTab" href="#tabImagesVehicleVehicleImage" role="tab" data-toggle="tab" aria-controls="tabImagesVehicleVehicleImage">Vehicles vehicle image</a>
            </li>
            <li>
                <a id="imagesVehicleManufacturerImageTab" href="#tabImagesVehicleManufacturerImage" role="tab" data-toggle="tab" aria-controls="tabImagesVehicleManufacturerImage">Vehicles manufacturer image</a>
            </li>
            <li>
                <a id="imagesVehicleImageVehicleImageTab" href="#tabImagesVehicleImageVehicleImage" role="tab" data-toggle="tab" aria-controls="tabImagesVehicleImageVehicleImage">Vehicle images vehicle image</a>
            </li>
            </ul>
        </li>
        </ul>

        {{ form_errors(form) }}
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane fade in active" id="tab1" aria-labelledby="vars1Tab">
                {% set tabTitle = __('Owner refresh') %}
                <fieldset>
                    <legend>{{ tabTitle }}</legend>
                
                    <p class="alert alert-info">{{ __('here we can refresh the owner relationsship for vehicles and vehicle images. This can be used if a vehicle has been addressed to another user.')|nl2br }}</p>
                
                    {{ form_row(form.myFlag) }}
                </fieldset>
            </div>
            <div role="tabpanel" class="tab-pane fade" id="tab2" aria-labelledby="vars2Tab">
                {% set tabTitle = __('Listviews') %}
                <fieldset>
                    <legend>{{ tabTitle }}</legend>
                
                    <p class="alert alert-info">{{ __('Here you can configure parameters for list views.')|nl2br }}</p>
                
                    {{ form_row(form.vehicleEntriesPerPage) }}
                    {{ form_row(form.vehicleImageEntriesPerPage) }}
                </fieldset>
            </div>
            <div role="tabpanel" class="tab-pane fade" id="tabImagesVehicleTitleImage" aria-labelledby="imagesVehicleTitleImageTab">
                {% set tabTitle = __('Image settings for vehicles title image') %}
                <fieldset>
                    <legend>{{ tabTitle }}</legend>
            
                    {{ form_row(form.enableShrinkingForVehicleTitleImage) }}
                    <div id="shrinkDetailsVehicleTitleImage">
                    {{ form_row(form.shrinkWidthVehicleTitleImage) }}
                    {{ form_row(form.shrinkHeightVehicleTitleImage) }}
                    </div>
                    {{ form_row(form.thumbnailModeVehicleTitleImage) }}
                </fieldset>
            </div>
            <div role="tabpanel" class="tab-pane fade" id="tabImagesVehicleVehicleImage" aria-labelledby="imagesVehicleVehicleImageTab">
                {% set tabTitle = __('Image settings for vehicles vehicle image') %}
                <fieldset>
                    <legend>{{ tabTitle }}</legend>
            
                    {{ form_row(form.enableShrinkingForVehicleVehicleImage) }}
                    <div id="shrinkDetailsVehicleVehicleImage">
                    {{ form_row(form.shrinkWidthVehicleVehicleImage) }}
                    {{ form_row(form.shrinkHeightVehicleVehicleImage) }}
                    </div>
                    {{ form_row(form.thumbnailModeVehicleVehicleImage) }}
                </fieldset>
            </div>
            <div role="tabpanel" class="tab-pane fade" id="tabImagesVehicleManufacturerImage" aria-labelledby="imagesVehicleManufacturerImageTab">
                {% set tabTitle = __('Image settings for vehicles manufacturer image') %}
                <fieldset>
                    <legend>{{ tabTitle }}</legend>
            
                    {{ form_row(form.enableShrinkingForVehicleManufacturerImage) }}
                    <div id="shrinkDetailsVehicleManufacturerImage">
                    {{ form_row(form.shrinkWidthVehicleManufacturerImage) }}
                    {{ form_row(form.shrinkHeightVehicleManufacturerImage) }}
                    </div>
                    {{ form_row(form.thumbnailModeVehicleManufacturerImage) }}
                </fieldset>
            </div>
            <div role="tabpanel" class="tab-pane fade" id="tabImagesVehicleImageVehicleImage" aria-labelledby="imagesVehicleImageVehicleImageTab">
                {% set tabTitle = __('Image settings for vehicle images vehicle image') %}
                <fieldset>
                    <legend>{{ tabTitle }}</legend>
            
                    {{ form_row(form.enableShrinkingForVehicleImageVehicleImage) }}
                    <div id="shrinkDetailsVehicleImageVehicleImage">
                    {{ form_row(form.shrinkWidthVehicleImageVehicleImage) }}
                    {{ form_row(form.shrinkHeightVehicleImageVehicleImage) }}
                    </div>
                    {{ form_row(form.thumbnailModeVehicleImageVehicleImage) }}
                </fieldset>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
                {{ form_widget(form.save) }}
                {{ form_widget(form.cancel) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
{% block footer %}
    {{ parent() }}
    {{ pageAddAsset('javascript', zasset('@RKParkHausModule:js/RKParkHausModule.Config.js')) }}
{% endblock %}
