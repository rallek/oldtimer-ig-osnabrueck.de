{# purpose of this template: build the form to edit an instance of sponsor #}
{% extends routeArea == 'admin' ? 'RKSponsoringModule::adminBase.html.twig' : 'RKSponsoringModule::base.html.twig' %}

{% block header %}
    {{ parent() }}
    {{ pageAddAsset('javascript', zasset('@RKSponsoringModule:js/RKSponsoringModule.EditFunctions.js')) }}
    {{ pageAddAsset('javascript', zasset('@RKSponsoringModule:js/RKSponsoringModule.Validation.js')) }}
    {{ pageAddAsset('javascript', pagevars.homepath ~ 'vendor/twitter/typeahead.js/dist/typeahead.bundle.min.js') }}
{% endblock %}

{% block title mode == 'create' ? __('Create sponsor') : __('Edit sponsor') %}
{% block admin_page_icon mode == 'create' ? 'plus' : 'pencil-square-o' %}
{% block content %}
    <div class="rksponsoringmodule-sponsor rksponsoringmodule-edit">
{% form_theme form with [
    '@RKSponsoringModule/Form/bootstrap_3.html.twig',
    'ZikulaFormExtensionBundle:Form:form_div_layout.html.twig'
] %}
{{ form_start(form, {attr: {id: 'sponsorEditForm'}}) }}
{{ form_errors(form) }}
<fieldset>
    <legend>{{ __('Content') }}</legend>
    
    {{ form_row(form.sponsorName) }}
    
    {{ form_row(form.sponsoringEvent) }}
    
    {{ form_row(form.logo) }}
    
    {{ form_row(form.description) }}
    
    {{ form_row(form.startDate) }}
    
    {{ form_row(form.endDate) }}
    
    {{ form_row(form.sponsoringUser) }}
</fieldset>

{% if mode != 'create' %}
    {{ include('@RKSponsoringModule/Helper/includeStandardFieldsEdit.html.twig', { obj: sponsor }) }}
{% endif %}

{# include display hooks #}
{% if mode != 'create' %}
    {% set hookId = sponsor.id %}
    {% set hooks = notifyDisplayHooks(eventName='rksponsoringmodule.ui_hooks.sponsors.form_edit', id=hookId) %}
{% else %}
    {% set hooks = notifyDisplayHooks(eventName='rksponsoringmodule.ui_hooks.sponsors.form_edit', id=null) %}
{% endif %}
{% if hooks is iterable and hooks|length > 0 %}
    {% for providerArea, hook in hooks %}
        {% if providerArea != 'provider.scribite.ui_hooks.editor' %}{# fix for #664 #}
            <fieldset>
                {{ hook }}
            </fieldset>
        {% endif %}
    {% endfor %}
{% endif %}


{# include return control #}
{% if mode == 'create' %}
    <fieldset>
        <legend>{{ __('Return control') }}</legend>
        {{ form_row(form.repeatCreation) }}
    </fieldset>
{% endif %}

{# include possible submit actions #}
<div class="form-group form-buttons">
    <div class="col-sm-offset-3 col-sm-9">
        {% for action in actions %}
            {{ form_widget(attribute(form, action.id)) }}
        {% endfor %}
        {{ form_widget(form.reset) }}
        {{ form_widget(form.cancel) }}
    </div>
</div>
{{ form_end(form) }}
</div>
{% endblock %}
{% block footer %}
    {{ parent() }}

    {% set editImage = '<span class="fa fa-pencil-square-o"></span>' %}
    {% set deleteImage = '<span class="fa fa-trash-o"></span>' %}
    
    
    <script type="text/javascript">
    /* <![CDATA[ */
        
                var formButtons;
                var triggerValidation = true;
        
                function executeCustomValidationConstraints()
                {
                    rKSponsoringPerformCustomValidationRules('sponsor', '{% if mode != 'create' %}{{ sponsor.id }}{% endif %}');
                }
        
                function triggerFormValidation()
                {
                    executeCustomValidationConstraints();
                    if (!document.getElementById('sponsorEditForm').checkValidity()) {
                        // This does not really submit the form,
                        // but causes the browser to display the error message
                        jQuery('#sponsorEditForm').find(':submit').first().click();
                    }
                }
        
                function handleFormSubmit (event) {
                    if (triggerValidation) {
                        triggerFormValidation();
                        if (!document.getElementById('sponsorEditForm').checkValidity()) {
                            event.preventDefault();
                            return false;
                        }
                    }
        
                    // hide form buttons to prevent double submits by accident
                    formButtons.each(function (index) {
                        jQuery(this).addClass('hidden');
                    });
        
                    return true;
                }
        
                ( function($) {
                    $(document).ready(function() {
                        $('a.lightbox').lightbox();
                        // initialise auto completion for user fields
                        rKSponsoringInitUserField('rksponsoringmodule_sponsor_sponsoringUser', 'getSponsorSponsoringUserUsers');
        
                        var allFormFields = $('#sponsorEditForm input, #sponsorEditForm select, #sponsorEditForm textarea');
                        allFormFields.change(executeCustomValidationConstraints);
        
                        formButtons = $('#sponsorEditForm .form-buttons input');
                        $('.btn-danger').first().bind('click keypress', function (event) {
                            if (!window.confirm('{{ __('Really delete this sponsor?') }}')) {
                                event.preventDefault();
                            }
                        });
                        $('#sponsorEditForm button[type=submit]').bind('click keypress', function (event) {
                            triggerValidation = !$(this).attr('formnovalidate');
                        });
                        $('#sponsorEditForm').submit(handleFormSubmit);
        
                        {% if mode != 'create' %}
                            triggerFormValidation();
                        {% endif %}
        
                        rKSponsoringInitUploadField('rksponsoringmodule_sponsor_logo_logo');
                        rKSponsoringInitDateField('rksponsoringmodule_sponsor_startDate');
                    });
                })(jQuery);
    /* ]]> */
    </script>
{% endblock %}
