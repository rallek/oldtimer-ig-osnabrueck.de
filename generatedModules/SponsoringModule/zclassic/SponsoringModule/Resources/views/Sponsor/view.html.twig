{# purpose of this template: sponsors list view #}
{% extends routeArea == 'admin' ? 'RKSponsoringModule::adminBase.html.twig' : 'RKSponsoringModule::base.html.twig' %}
{% block title __('Sponsor list') %}
{% block admin_page_icon 'list-alt' %}
{% block content %}
<div class="rksponsoringmodule-sponsor rksponsoringmodule-view">

    {{ block('page_nav_links') }}

    {{ include('@RKSponsoringModule/Sponsor/viewQuickNav.html.twig') }}{# see template file for available options #}

    {% if routeArea == 'admin' %}
    <form action="{{ path('rksponsoringmodule_sponsor_' ~ routeArea ~ 'handleselectedentries') }}" method="post" id="sponsorsViewForm" class="form-horizontal" role="form">
        <div>
    {% endif %}
        <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover table-condensed">
            <colgroup>
                {% if routeArea == 'admin' %}
                    <col id="cSelect" />
                {% endif %}
                {% if routeArea == 'admin' %}
                <col id="cWorkflowState" />
                {% endif %}
                <col id="cSponsorName" />
                <col id="cSponsoringEvent" />
                <col id="cLogo" />
                <col id="cDescription" />
                <col id="cStartDate" />
                <col id="cEndDate" />
                <col id="cSponsoringUser" />
                <col id="cItemActions" />
            </colgroup>
            <thead>
            <tr>
                {% if routeArea == 'admin' %}
                    <th id="hSelect" scope="col" class="text-center">
                        <input type="checkbox" id="toggleSponsors" />
                    </th>
                {% endif %}
                {% if routeArea == 'admin' %}
                <th id="hWorkflowState" scope="col" class="text-left">
                    <a href="{{ sort.workflowState.url }}" title="{{ __f('Sort by %s', {'%s': 'state'}) }}" class="{{ sort.workflowState.class }}">{{ __('State') }}</a>
                </th>
                {% endif %}
                <th id="hSponsorName" scope="col" class="text-left">
                    <a href="{{ sort.sponsorName.url }}" title="{{ __f('Sort by %s', {'%s': 'sponsor name'}) }}" class="{{ sort.sponsorName.class }}">{{ __('Sponsor name') }}</a>
                </th>
                <th id="hSponsoringEvent" scope="col" class="text-left">
                    <a href="{{ sort.sponsoringEvent.url }}" title="{{ __f('Sort by %s', {'%s': 'sponsoring event'}) }}" class="{{ sort.sponsoringEvent.class }}">{{ __('Sponsoring event') }}</a>
                </th>
                <th id="hLogo" scope="col" class="text-left">
                    <a href="{{ sort.logo.url }}" title="{{ __f('Sort by %s', {'%s': 'logo'}) }}" class="{{ sort.logo.class }}">{{ __('Logo') }}</a>
                </th>
                <th id="hDescription" scope="col" class="text-left">
                    <a href="{{ sort.description.url }}" title="{{ __f('Sort by %s', {'%s': 'description'}) }}" class="{{ sort.description.class }}">{{ __('Description') }}</a>
                </th>
                <th id="hStartDate" scope="col" class="text-left">
                    <a href="{{ sort.startDate.url }}" title="{{ __f('Sort by %s', {'%s': 'start date'}) }}" class="{{ sort.startDate.class }}">{{ __('Start date') }}</a>
                </th>
                <th id="hEndDate" scope="col" class="text-left">
                    <a href="{{ sort.endDate.url }}" title="{{ __f('Sort by %s', {'%s': 'end date'}) }}" class="{{ sort.endDate.class }}">{{ __('End date') }}</a>
                </th>
                <th id="hSponsoringUser" scope="col" class="text-left">
                    <a href="{{ sort.sponsoringUser.url }}" title="{{ __f('Sort by %s', {'%s': 'sponsoring user'}) }}" class="{{ sort.sponsoringUser.class }}">{{ __('Sponsoring user') }}</a>
                </th>
                <th id="hItemActions" scope="col" class="text-right z-order-unsorted">{{ __('Actions') }}</th>
            </tr>
            </thead>
            <tbody>
        
        {% for sponsor in items %}
            <tr>
                {% if routeArea == 'admin' %}
                    <td headers="hSelect" class="text-center">
                        <input type="checkbox" name="items[]" value="{{ sponsor.id }}" class="sponsors-checkbox" />
                    </td>
                {% endif %}
                {% if routeArea == 'admin' %}<td headers="hWorkflowState" class="text-left nowrap">
                    {{ sponsor.workflowState|rksponsoringmodule_objectState }}
                </td>
                {% endif %}<td headers="hSponsorName" class="text-left">
                    {{ sponsor.sponsorName }}
                </td>
                <td headers="hSponsoringEvent" class="text-left">
                    {{ sponsor.sponsoringEvent }}
                </td>
                <td headers="hLogo" class="text-left">
                    {% if sponsor.logo is not empty and sponsor.logoMeta|default %}
                                <a href="{{ sponsor.logoUrl }}" title="{{ sponsor.getTitleFromDisplayPattern()|e('html_attr') }}"{% if sponsor.logoMeta.isImage %} class="lightbox"{% endif %}>
                    {% if sponsor.logoMeta.isImage %}
                        {% set thumbOptions = attribute(thumbRuntimeOptions, 'sponsorLogo') %}
                        <img src="{{ sponsor.logo.getPathname()|imagine_filter('zkroot', thumbOptions) }}" alt="{{ sponsor.getTitleFromDisplayPattern()|e('html_attr') }}" width="{{ thumbOptions.thumbnail.size[0] }}" height="{{ thumbOptions.thumbnail.size[1] }}" class="img-thumbnail" />
                    {% else %}
                        {{ __('Download') }} ({{ sponsor.logoMeta.size|rksponsoringmodule_fileSize(sponsor.logo.getPathname(), false, false) }})
                    {% endif %}
                    </a>
                    {% else %}&nbsp;{% endif %}
                </td>
                <td headers="hDescription" class="text-left">
                    {{ sponsor.description|safeHtml }}
                </td>
                <td headers="hStartDate" class="text-left">
                    {{ sponsor.startDate|localizeddate('medium', 'none') }}
                </td>
                <td headers="hEndDate" class="text-left">
                    {{ sponsor.endDate|localizeddate('medium', 'none') }}
                </td>
                <td headers="hSponsoringUser" class="text-left">
                    {% if sponsor.sponsoringUser > 0 %}
                        {{ sponsor.sponsoringUser|profileLinkByUserId() }}
                        <span class="avatar">{{ rksponsoringmodule_userAvatar(uid=sponsor.sponsoringUser, rating='g') }}</span>
                    {% else %}&nbsp;{% endif %}
                </td>
                <td id="itemActions{{ sponsor.id }}" headers="hItemActions" class="actions text-right nowrap z-w02">
                    {% set itemActions = knp_menu_get('RKSponsoringModule:ItemActionsMenu:menu', [], { entity: sponsor, area: routeArea, context: 'view' }) %}
                    <div class="dropdown">
                        <a id="itemActions{{ sponsor.id }}DropDownToggle" role="button" data-toggle="dropdown" data-target="#" href="javascript:void(0);" class="hidden dropdown-toggle"><i class="fa fa-tasks"></i> <span class="caret"></span></a>
                        
                        {{ knp_menu_render(itemActions, { template: 'ZikulaMenuModule:Override:actions.html.twig' }) }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr class="z-{{ routeArea == 'admin' ? 'admin' : 'data' }}tableempty">
                <td class="text-left" colspan="{% if routeArea == 'admin' %}10{% else %}9{% endif %}">
            {{ __('No sponsors found.') }}
              </td>
            </tr>
        {% endfor %}
        
            </tbody>
        </table>
        </div>
        
        {% if showAllEntries != 1 and pager|default %}
            {{ pager({ rowcount: pager.numitems, limit: pager.itemsperpage, display: 'page', route: 'rksponsoringmodule_sponsor_' ~ routeArea ~ 'view'}) }}
        {% endif %}
    {% if routeArea == 'admin' %}
            <fieldset>
                <label for="rKSponsoringModuleAction" class="col-sm-3 control-label">{{ __('With selected sponsors') }}</label>
                <div class="col-sm-6">
                    <select id="rKSponsoringModuleAction" name="action" class="form-control input-sm">
                        <option value="">{{ __('Choose action') }}</option>
                    <option value="archive" title="{{ __('Move content into the archive.') }}">{{ __('Archive') }}</option>
                        <option value="delete" title="{{ __('Delete content permanently.') }}">{{ __('Delete') }}</option>
                    </select>
                </div>
                <div class="col-sm-3">
                    <input type="submit" value="{{ __('Submit') }}" class="btn btn-default btn-sm" />
                </div>
            </fieldset>
        </div>
    </form>
    {% endif %}

    {{ block('display_hooks') }}
</div>
{% endblock %}
{% block page_nav_links %}
    {% if canBeCreated %}
        {% if hasPermission('RKSponsoringModule:Sponsor:', '::', 'ACCESS_EDIT') %}
            {% set createTitle = __('Create sponsor') %}
            <a href="{{ path('rksponsoringmodule_sponsor_' ~ routeArea ~ 'edit') }}" title="{{ createTitle|e('html_attr') }}" class="fa fa-plus">{{ createTitle }}</a>
        {% endif %}
    {% endif %}
    {% if showAllEntries == 1 %}
        {% set linkTitle = __('Back to paginated view') %}
        <a href="{{ path('rksponsoringmodule_sponsor_' ~ routeArea ~ 'view') }}" title="{{ linkTitle|e('html_attr') }}" class="fa fa-table">{{ linkTitle }}</a>
    {% else %}
        {% set linkTitle = __('Show all entries') %}
        <a href="{{ path('rksponsoringmodule_sponsor_' ~ routeArea ~ 'view', { all: 1 }) }}" title="{{ linkTitle|e('html_attr') }}" class="fa fa-table">{{ linkTitle }}</a>
    {% endif %}
{% endblock %}
{% block display_hooks %}
    
    {# here you can activate calling display hooks for the view page if you need it #}
    {# % if routeArea != 'admin' %}
        {% set hooks = notifyDisplayHooks(eventName='rksponsoringmodule.ui_hooks.sponsors.display_view', urlObject=currentUrlObject) %}
        {% for providerArea, hook in hooks %}
            {{ hook }}
        {% endfor %}
    {% endif % #}
{% endblock %}
{% block footer %}
    {{ parent() }}

<script type="text/javascript">
/* <![CDATA[ */
    ( function($) {
        $(document).ready(function() {
            $('a.lightbox').lightbox();
            $('.rksponsoringmodule-sponsor .dropdown > ul').removeClass('list-inline').addClass('list-unstyled dropdown-menu dropdown-menu-right');
            $('.rksponsoringmodule-sponsor .dropdown > ul a').each(function (index) {
                $(this).html($(this).html() + $(this).find('i').first().data('original-title'));
            });
            $('.rksponsoringmodule-sponsor .dropdown > ul a i').addClass('fa-fw');
            $('.rksponsoringmodule-sponsor .dropdown-toggle').removeClass('hidden').dropdown();
            {% if routeArea == 'admin' %}
                {# init the "toggle all" functionality #}
                if ($('#toggleSponsors').length > 0) {
                    $('#toggleSponsors').click(function (event) {
                        $('sponsors-checkbox').prop('checked', $(this).prop('checked'));
                    });
                }
            {% endif %}
        });
    })(jQuery);
/* ]]> */
</script>
{% endblock %}
