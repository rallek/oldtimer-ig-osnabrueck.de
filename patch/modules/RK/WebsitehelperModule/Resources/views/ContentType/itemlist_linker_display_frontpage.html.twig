{# Purpose of this template: Display linkers within an external context #}
<div class="section">
	<div class="container">
		<div class="row">
		    {% for linker in items %}
			<div class="{{ linker.boostrapSetting }} top-space bottom-space">
				<div class="row">
					<div class="col-md-12 hidden-xs">
						{% if linker.linkerImageMeta.isImage %}                 
							<a href="{{ linker.theLink }}"><img src="{{ linker.linkerImage.getPathname() }}" width="100%" alt="{{ linker.getTitleFromDisplayPattern()|e('html_attr') }}" /></a>
						{% else %}
							{{ __('Download') }} ({{ linker.linkerImageMeta.size|rkwebsitehelpermodule_fileSize(linker.linkerImage.getPathname(), false, false) }})
						{% endif %}
						<h2>{{ linker.getTitleFromDisplayPattern() }}</h2>
						{% if linker.linkerText %}
							<p class="min-height">{{ linker.linkerText|striptags|truncate(200, true, '&hellip;') }}</p>
						{% endif %}        
						<a  type="button" class="btn btn-primary" href="{{ linker.theLink }}">{{ __('Read more') }}</a>
					</div>
					<div class="col-xs-4 hidden-sm hidden-md hidden-lg">
						{% if linker.linkerImageMeta.isImage %}                 
							<a href="{{ linker.theLink }}"><img src="{{ linker.linkerImage.getPathname() }}" width="100%" alt="{{ linker.getTitleFromDisplayPattern()|e('html_attr') }}" /></a>
						{% else %}
							{{ __('Download') }} ({{ linker.linkerImageMeta.size|rkwebsitehelpermodule_fileSize(linker.linkerImage.getPathname(), false, false) }})
						{% endif %}
						<a  type="button" class="btn btn-link" href="{{ linker.theLink }}">{{ __('Read more') }}</a>
					</div>
					<div class="col-xs-8 hidden-sm hidden-md hidden-lg">
						<h4>{{ linker.getTitleFromDisplayPattern() }}</h4>
						{% if linker.linkerText %}
							<p>{{ linker.linkerText|striptags|truncate(200, true, '&hellip;') }}</p>
						{% endif %}        
						
					</div>
				</div>
			</div>	
			{% endfor %}
		</div>
	</div>
</div>
		

